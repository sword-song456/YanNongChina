.touxiang{
    display: inline-block;
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
    margin: 0 285rpx;
    margin-top: 100rpx;
    box-shadow:0rpx 0rpx 15rpx -3rpx #666;
}

.box{
    position: relative;
    width: 100%;
    height: 900rpx;
    margin: 0 auto;
    margin-top: -60rpx;

    box-shadow:0rpx 0rpx 15rpx -3rpx #666;
    z-index: -1;
}

.username{
    font-size: 1em;
    position: absolute;
    top: 70rpx;
    left: 345rpx;
}

.bar{
    position: absolute;
    width: 100%;
    height: 100rpx;
    top: 250rpx;
    box-shadow:0rpx 0rpx 8rpx -3rpx #666;

}

.bar image{
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin-left: 50rpx;
    margin-top: 10rpx;
}

.bar text{
    display: inline-block;
    font-size: 1.2em;
    margin-left: 30rpx;
}
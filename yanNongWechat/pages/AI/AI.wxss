.camera {
    width: 750rpx;
    height: 1500rpx;
    border-radius: 50%;
    margin: 0;
    position: relative;
  }
   
  .camera image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 10;
  }
   
  .camera camera {
    width:100%;
    height: 100%;
  }
   
  button.takePhoto:not([size='mini']) {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 90rpx;
    border-radius: 0;
  }